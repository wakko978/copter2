	<p>
		<%= f.label 'secondary_link', 'Secondary' %>
		<%= f.collection_select :secondary_link, @collection, :id, :name, {:include_blank => true} %>
	</p>
	
	<p>
		<%= f.label 'tertiary_link', 'Tertiary' %>
		<%= f.collection_select :tertiary_link, @collection, :id, :name, {:include_blank => true} %>
	</p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>